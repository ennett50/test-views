block block-content
	+breadcrumbsSimple(['Бытовая техника', 'Холодильник Bosch KGN 36VL10 Indesit BIA 18 S Indesit BIA 18 S'])
	div.row
		div.col-lg-5.col-md-6
			include modules/product-gallery

			include modules/product-info
		div.col-lg-7.col-md-6.product-cart
			div.product-cart-ctn
				h1 Холодильник Bosch KGN 36VL10 Indesit BIA 18 S Indesit BIA 18 S
				div.product-cart-info
					p Арт. 000000
