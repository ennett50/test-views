div.modal.fade#js-logon-form.js-modal
	div.modal-dialog
		div.modal-content.modal-body.modal-registration
			button.close(type='button', data-dismiss='modal', aria-label='Close')
				span(aria-hidden='true') ×

			div.tabs-ctn
				div.modal-title.tabs
					a(href="#tab-logon" class="tabs-item __current" data-tabs="" data-tabs-group="tab-logon") Войдите
					span.tabs-sep /
					a(href="#tab-reg" class="tabs-item" data-tabs="" data-tabs-group="tab-reg") Зарегистрируйтесь
				div(id="tab-logon" class="tabs-container-item __current" data-tabs-group="tab-logon")
					form(method="POST", action="").form-horizontal
						div.form-group
							label(for="form-email" class="control-label form-inline") Эл. почта
							div.form-group-input
								input(type="email" class="form-control " id="form-email" )
						div.form-group
							label(for="form-password" class="control-label form-inline") Пароль
							div.form-group-input
								input(type="password" class="form-control " id="form-password" )
						div.form-horizontal-btn
							a(href="#" data-toggle="modal" data-target="#js-remember-password").form-remember забыли пароль?
							input(type="submit", value="Войти").button

					div.social-logon
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__vk
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__fb
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__ok

				div(id="tab-reg" class="tabs-container-item" data-tabs-group="tab-reg")
					form(method="POST", action="").form-horizontal
						div.form-group
							label(for="form-email-reg" class="control-label form-inline") Эл. почта
							div.form-group-input
								input(type="email" class="form-control " id="form-email-reg" )
						div.form-group
							label(for="form-name-reg" class="control-label form-inline") Ваше имя
							div.form-group-input
								input(type="text" class="form-control " id="form-name-reg" )
						div.form-group
							label(for="form-password-reg" class="control-label form-inline") Пароль
							div.form-group-input
								input(type="password" class="form-control " id="form-password-reg" )
								div.form-info Минимум 6 символов
						div.form-group
							label(for="form-password-again-reg" class="control-label form-inline") Повторите
							div.form-group-input
								input(type="password" class="form-control " id="form-password-again-reg" )
						div.form-horizontal-btn
							input(type="submit", value="Зарегистрироваться").button



					div.social-logon
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__vk
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__fb
						div.social-logon-item
							a(href="#", target="_blank").social-links-item.__ok



